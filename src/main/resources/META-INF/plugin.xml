<idea-plugin>
  <id>com.shine.ai</id>
  <name>ShineAI</name>
  <vendor email="shine4387@outlook.com" url="https://github.com/clolushine">ShineZhong</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends>org.intellij.plugins.markdown</depends>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="ShineAI" anchor="right" icon="/icons/toolWindow.png" canCloseContents="true"
                factoryClass="com.shine.ai.MyToolWindowFactory"/>
    <applicationConfigurable parentId="tools" instance="com.shine.ai.settings.AIAssistantSettingsPanel"
                             id="com.shine.ai.settings.AIAssistantSettings"
                             displayName="ShineAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.OpenAISettingPanel"
                             id="com.shine.ai.settings.OpenAI"
                             displayName="OpenAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.GoogleAISettingPanel"
                             id="com.shine.ai.settings.GoogleAI"
                             displayName="GoogleAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.AnthropicAISettingPanel"
                             id="com.shine.ai.settings.AnthropicAI"
                             displayName="AnthropicAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.CFAISettingPanel"
                             id="com.shine.ai.settings.CloudflareAI"
                             displayName="CloudflareAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.GroqAISettingPanel"
                             id="com.shine.ai.settings.GroqAI"
                             displayName="GroqAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.OpenRouterAISettingPanel"
                             id="com.shine.ai.settings.OpenRouterAI"
                             displayName="OpenRouterAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.DeepSeekAISettingPanel"
                             id="com.shine.ai.settings.DeepSeekAI"
                             displayName="DeepSeekAI"/>
    <applicationConfigurable parentId="com.shine.ai.settings.AIAssistantSettings" instance="com.shine.ai.settings.NvidiaAISettingPanel"
                             id="com.shine.ai.settings.NvidiaAI"
                             displayName="NvidiaAI"/>
    <applicationService serviceImplementation="com.shine.ai.settings.AIAssistantSettingsState"/>
    <applicationService serviceImplementation="com.shine.ai.core.TokenManager"/>
    <projectService serviceImplementation="com.shine.ai.core.SendAction"/>
    <projectService serviceImplementation="com.shine.ai.AIHandler"/>
    <iconMapper mappingFile="AIIconMappings.json"/>
  </extensions>

  <actions>
  </actions>
</idea-plugin>
